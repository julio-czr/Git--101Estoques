{
  "hosting": {
    "public": "microfrontend/dist",
    "predeploy": ["npm --prefix microfrontend run build"],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "bff" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "functions": [
    {
      "codebase": "default",
      "source": "functions"
    },
    {
      "source": "101functions",
      "codebase": "101functions",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    }
  ]
}
